<!DOCTYPE html>
<html>
<head>
  <title>Biketheworld</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/flash_messages' %>
<%= render 'layouts/menu' %>

<div class="container">
    <%= yield %>
</div>

<div class="container-full">

      <div class="row expand">
        
        <section class="bg1">
          <div class="col-lg-12 text-center v-center">  
            <div class="text-section">
             <!-- bikefindercity.com -->
             <h1>Biking Anywhere</h1>
             <!--<p class="lead">Biking in the world</p>-->
            </div>

            <br><br><br>
            
            <form class="col-lg-12">
              <div class="input-group" style="width:340px;text-align:center;margin:0 auto;">
              <input class="form-control input-lg" id="geocomplete" title="" placeholder="Where do you want to bike ?" type="text" autocomplete="off" >
                <span class="input-group-btn">
                  <button id="find" class="btn btn-lg btn-primary" type="button">
                    GO
                  </button>
                </span>
              </div>
            </form>
          </div>
        </section>

        
        
      </div> <!-- /row -->
  
  	  <div class="row">
       
        <div class="col-lg-13 text-center v-center" style="font-size:39pt;">        
          <%= image_tag "soc_fb.png" %>
          <%= image_tag "soc_gplus.png" %>
          <%= image_tag "soc_tw.png" %>
          <%= image_tag "soc_pin.png" %>
        </div>
      
      </div>
  
  	<br><br><br><br><br>

</div> <!-- /container full -->

<div class="container">
  
  	<hr>
  	<div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3>San Francisco</h3>
            </div>
            <a href="#" title="Bike San Francisco">
              <%= image_tag "home_pic01.jpg", class:"img-responsive" %>
            </a>
          </div>
        </div>
      	<div class="col-md-4">
        	<div class="panel panel-default">
            <div class="panel-heading">
              <h3>New York</h3>
            </div>
            <a href="#" title="Bike San Francisco">
              <%= image_tag "home_pic02.jpg", class:"img-responsive" %>
            </a>
          </div>
        </div>
      	<div class="col-md-4">
        	<div class="panel panel-default">
            <div class="panel-heading">
              <h3>Seattle</h3>
            </div>
            <a href="#" title="Bike San Francisco">
              <%= image_tag "home_pic03.jpg", class:"img-responsive" %>
            </a>
          </div>
        </div>
    </div>
<footer>
	<div class="row">
        <div class="col-lg-12">
        <br><br>
          <p class="pull-right"><a href="http://www.bootply.com">Template from Bootply</a> &nbsp; Â©Copyright 2013 ACME<sup>TM</sup> Brand.</p>
        <br><br>
        </div>
    </div>
</footer>	
</body>
</html>
